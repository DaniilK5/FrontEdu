<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEdu.Views.CuratorPage"
             Title="CuratorPage">
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Фильтры -->
        <Grid Grid.Row="0" Margin="10" ColumnDefinitions="*,*,Auto" RowDefinitions="Auto,Auto">
            <Label Text="Начало периода:" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0"/>
            <DatePicker x:Name="StartDatePicker" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0"/>

            <Label Text="Конец периода:" Grid.Column="1" Grid.Row="0" Margin="0,0,10,0"/>
            <DatePicker x:Name="EndDatePicker" Grid.Column="1" Grid.Row="1" Margin="0,0,10,0"/>

            <Button Text="Применить" 
                    Grid.Column="2" Grid.Row="1"
                    x:Name="ApplyFilterButton"
                    Clicked="OnApplyFilterClicked"/>
        </Grid>

        <!-- Статистика группы -->
        <Grid Grid.Row="1" Margin="10" RowDefinitions="Auto,Auto,Auto,Auto">
            <Label x:Name="GroupNameLabel" 
                   FontSize="Large" 
                   FontAttributes="Bold"/>

            <Grid Grid.Row="1" ColumnDefinitions="*,*,*">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Всего студентов:"/>
                    <Label x:Name="TotalStudentsLabel"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Средний балл:"/>
                    <Label x:Name="AverageGradeLabel"/>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Column="2">
                    <Label Text="Ср. пропуски:"/>
                    <Label x:Name="AverageAbsencesLabel"/>
                </VerticalStackLayout>
            </Grid>

            <!-- Распределение оценок -->
            <Frame Grid.Row="2" Margin="0,10">
                <VerticalStackLayout>
                    <Label Text="Распределение оценок" FontAttributes="Bold"/>
                    <Grid ColumnDefinitions="*,*,*,*">
                        <VerticalStackLayout Grid.Column="0">
                            <Label Text="Отлично"/>
                            <Label x:Name="ExcellentLabel"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="1">
                            <Label Text="Хорошо"/>
                            <Label x:Name="GoodLabel"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="2">
                            <Label Text="Удовл."/>
                            <Label x:Name="SatisfactoryLabel"/>
                        </VerticalStackLayout>
                        <VerticalStackLayout Grid.Column="3">
                            <Label Text="Неудовл."/>
                            <Label x:Name="PoorLabel"/>
                        </VerticalStackLayout>
                    </Grid>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Список студентов -->
        <CollectionView Grid.Row="2" 
                        x:Name="StudentsCollection"
                        Margin="10"
                        SelectionMode="Single"
                        SelectionChanged="OnStudentSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            <Label Text="{Binding FullName}" 
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="1" 
                                   Text="{Binding Performance.AverageGrade, StringFormat='Ср.балл: {0:F1}'}"
                                   Margin="10,0"
                                   VerticalOptions="Center"/>
                            <Label Grid.Column="2" 
                                   Text="{Binding Attendance.TotalAbsences, StringFormat='Пропуски: {0}'}"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator x:Name="LoadingIndicator" 
                          Grid.RowSpan="3"
                          IsVisible="False"
                          IsRunning="True"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>