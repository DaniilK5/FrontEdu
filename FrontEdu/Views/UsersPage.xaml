<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEdu.Views.UsersPage"
             Title="Управление пользователями">

    <Grid RowDefinitions="Auto,*">
        <!-- Панель поиска -->
        <Grid Grid.Row="0" 
              Padding="10"
              ColumnDefinitions="*,Auto"
              BackgroundColor="{StaticResource Gray200}">
            <SearchBar Grid.Column="0"
                       x:Name="SearchBar"
                       Placeholder="Поиск по имени или email"
                       TextChanged="OnSearchTextChanged"/>
            
            <Button Grid.Column="1"
                    Text="Обновить"
                    Clicked="OnRefreshClicked"
                    Margin="5,0,0,0"/>
        </Grid>

        <!-- Список пользователей -->
        <RefreshView Grid.Row="1"
                     x:Name="UsersRefreshView">
            <CollectionView x:Name="UsersCollection"
                          SelectionMode="Single"
                          SelectionChanged="OnUserSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5"
                               Padding="10"
                               BorderColor="{StaticResource Gray300}">
                            <Grid ColumnDefinitions="*,Auto">
                                <VerticalStackLayout Grid.Column="0" 
                                                   Spacing="5">
                                    <Label Text="{Binding FullName}"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding Email}"
                                           TextColor="{StaticResource Gray600}"/>
                                    <Grid ColumnDefinitions="Auto,*">
                                        <Label Grid.Column="0"
                                               Text="{Binding Role}"
                                               TextColor="{StaticResource Primary}"/>
                                        <Label Grid.Column="1"
                                               Text="{Binding StudentGroup}"
                                               TextColor="{StaticResource Gray600}"
                                               IsVisible="{Binding StudentGroup, Converter={StaticResource StringNotNullOrEmptyConverter}}"
                                               Margin="10,0,0,0"/>
                                    </Grid>
                                </VerticalStackLayout>

                                <Button Grid.Column="1"
                                        Text="✎"
                                        FontSize="20"
                                        HeightRequest="40"
                                        WidthRequest="40"
                                        Clicked="OnEditUserClicked"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Индикатор загрузки -->
        <ActivityIndicator Grid.RowSpan="2"
                          x:Name="LoadingIndicator"
                          IsVisible="False"
                          IsRunning="{Binding Source={RelativeSource Self}, Path=IsVisible}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>