<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEdu.Views.SubjectsPage"
             Title="Предметы">

    <Grid RowDefinitions="Auto,*">
        <!-- Верхняя панель -->
        <Grid Grid.Row="0" 
              Padding="10"
              ColumnDefinitions="*,Auto"
              BackgroundColor="{StaticResource Gray200}">

            <SearchBar Grid.Column="0"
                       x:Name="SearchBar"
                       Placeholder="Поиск предмета"
                       TextChanged="OnSearchTextChanged"/>

            <Button Grid.Column="1"
                    x:Name="AddSubjectButton"
                    Text="+"
                    FontSize="20"
                    WidthRequest="50"
                    Margin="5,0,0,0"
                    IsVisible="False"
                    Clicked="OnAddSubjectClicked"/>
        </Grid>

        <!-- Список предметов -->
        <RefreshView Grid.Row="1"
                     x:Name="SubjectsRefreshView">
            <CollectionView x:Name="SubjectsCollection"
                            SelectionMode="Single"
                            SelectionChanged="OnSubjectSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5"
                               Padding="15"
                               BorderColor="{StaticResource Gray300}">
                            <Grid RowDefinitions="Auto,Auto,Auto"
                                  RowSpacing="10">
                                <!-- Название и код -->
                                <Grid Grid.Row="0" 
                                      ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Code}"
                                           TextColor="{StaticResource Primary}"/>
                                </Grid>

                                <!-- Описание -->
                                <Label Grid.Row="1"
                                       Text="{Binding Description}"
                                       LineBreakMode="WordWrap"/>

                                <!-- Количество курсов -->
                                <Label Grid.Row="2"
                                       Text="{Binding CoursesCount, StringFormat='Количество курсов: {0}'}"
                                       TextColor="{StaticResource Gray600}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center" 
                               VerticalOptions="Center">
                        <Label Text="Нет предметов"
                               FontSize="18"
                               TextColor="{StaticResource Gray600}"/>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Индикатор загрузки -->
        <ActivityIndicator Grid.RowSpan="2"
                          x:Name="LoadingIndicator"
                          IsVisible="false"
                          IsRunning="{Binding Source={RelativeSource Self}, Path=IsVisible}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>