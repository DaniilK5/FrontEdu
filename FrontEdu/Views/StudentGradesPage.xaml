<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEdu.Views.StudentGradesPage"
             Title="Мои оценки">
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Фильтры -->
        <Grid Grid.Row="0" Margin="10" ColumnDefinitions="*,*,*,Auto" RowDefinitions="Auto,Auto">
            <Label Text="Начало периода:" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0"/>
            <DatePicker x:Name="StartDatePicker" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0"/>

            <Label Text="Конец периода:" Grid.Column="1" Grid.Row="0" Margin="0,0,10,0"/>
            <DatePicker x:Name="EndDatePicker" Grid.Column="1" Grid.Row="1" Margin="0,0,10,0"/>

            <Label Text="Предмет:" Grid.Column="2" Grid.Row="0" Margin="0,0,10,0"/>
            <Picker x:Name="SubjectPicker" 
                    Grid.Column="2" Grid.Row="1" 
                    Title="Выберите предмет"
                    Margin="0,0,10,0"/>

            <Button Text="Применить" 
                    Grid.Column="3" Grid.Row="1"
                    x:Name="ApplyFilterButton"
                    Clicked="OnApplyFilterClicked"/>
        </Grid>

        <!-- Общая статистика -->
        <Frame Grid.Row="1" Margin="10">
            <Grid RowDefinitions="Auto,Auto">
                <Grid ColumnDefinitions="*,*">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Средний балл" FontAttributes="Bold"/>
                        <Label x:Name="AverageGradeLabel" FontSize="Large"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Всего оценок" FontAttributes="Bold"/>
                        <Label x:Name="TotalGradesLabel" FontSize="Large"/>
                    </VerticalStackLayout>
                </Grid>

                <Grid Grid.Row="1" ColumnDefinitions="*,*,*,*" Margin="0,10,0,0">
                    <VerticalStackLayout Grid.Column="0">
                        <Label Text="Отлично"/>
                        <Label x:Name="ExcellentLabel"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="1">
                        <Label Text="Хорошо"/>
                        <Label x:Name="GoodLabel"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="2">
                        <Label Text="Удовл."/>
                        <Label x:Name="SatisfactoryLabel"/>
                    </VerticalStackLayout>
                    <VerticalStackLayout Grid.Column="3">
                        <Label Text="Неуд."/>
                        <Label x:Name="PoorLabel"/>
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </Frame>

        <!-- Список оценок -->
        <CollectionView Grid.Row="2" 
                        x:Name="GradesCollection"
                        Margin="10"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,5" Padding="10">
                        <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                            <Label Text="{Binding Assignment.Course.Subject.Name}"
                                   FontAttributes="Bold"/>
                            <Label Grid.Column="1"
                                   Text="{Binding Value}"
                                   FontSize="Large"
                                   FontAttributes="Bold"/>

                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout>
                                    <Label Text="{Binding Assignment.Title}"/>
                                    <Label Text="{Binding Instructor.FullName, StringFormat='Преподаватель: {0}'}"
                                           FontSize="Small"/>
                                    <Label Text="{Binding Comment}"
                                           FontSize="Small"
                                           IsVisible="{Binding Comment, Converter={StaticResource StringNotEmptyConverter}}"/>
                                </StackLayout>
                                <Label Grid.Column="1"
                                       Text="{Binding GradedAt, StringFormat='{0:d}'}"
                                       FontSize="Small"
                                       VerticalOptions="End"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator x:Name="LoadingIndicator" 
                          Grid.RowSpan="3"
                          IsVisible="False"
                          IsRunning="True"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>