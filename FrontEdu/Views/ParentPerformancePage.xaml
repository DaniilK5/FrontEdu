<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FrontEdu.Views.ParentPerformancePage"
             Title="Успеваемость детей">
    <Grid RowDefinitions="Auto,*">
        <!-- Фильтры -->
        <Grid Grid.Row="0" Margin="10" ColumnDefinitions="*,*,Auto" RowDefinitions="Auto,Auto">
            <Label Text="Начало периода:" Grid.Column="0" Grid.Row="0" Margin="0,0,10,0"/>
            <DatePicker x:Name="StartDatePicker" Grid.Column="0" Grid.Row="1" Margin="0,0,10,0"/>

            <Label Text="Конец периода:" Grid.Column="1" Grid.Row="0" Margin="0,0,10,0"/>
            <DatePicker x:Name="EndDatePicker" Grid.Column="1" Grid.Row="1" Margin="0,0,10,0"/>

            <Button Text="Применить" 
                    Grid.Column="2" Grid.Row="1"
                    x:Name="ApplyFilterButton"
                    Clicked="OnApplyFilterClicked"/>
        </Grid>

        <!-- Список детей -->
        <CollectionView Grid.Row="1" 
                        x:Name="ChildrenCollection"
                        Margin="10"
                        SelectionMode="Single"
                        SelectionChanged="OnChildSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <!-- Добавьте визуальную обратную связь для выбора -->
                    <Frame Margin="0,5" Padding="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={x:Reference ChildrenCollection}, Path=SelectionChangedCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        <Grid RowDefinitions="Auto,Auto,Auto">
                            <!-- Информация о студенте -->
                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto">
                                <Label Text="{Binding StudentInfo.FullName}" 
                                       FontSize="Large"
                                       FontAttributes="Bold"/>
                                <Label Grid.Column="1" 
                                       Text="{Binding StudentInfo.Group.Name}"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <!-- Общая статистика -->
                            <Grid Grid.Row="1" ColumnDefinitions="*,*,*" Margin="0,10">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="Средний балл"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding OverallPerformance.AverageGrade, StringFormat='{0:F1}'}"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Column="1">
                                    <Label Text="Всего оценок"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding OverallPerformance.TotalGrades}"/>
                                </VerticalStackLayout>

                                <VerticalStackLayout Grid.Column="2">
                                    <Label Text="Пропуски"
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding AttendanceStats.TotalHours}"/>
                                </VerticalStackLayout>
                            </Grid>

                            <!-- Распределение оценок -->
                            <Grid Grid.Row="2" ColumnDefinitions="*,*,*,*">
                                <VerticalStackLayout Grid.Column="0">
                                    <Label Text="Отлично" FontSize="Small"/>
                                    <Label Text="{Binding OverallPerformance.GradeDistribution.Excellent}"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="1">
                                    <Label Text="Хорошо" FontSize="Small"/>
                                    <Label Text="{Binding OverallPerformance.GradeDistribution.Good}"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="2">
                                    <Label Text="Удовл." FontSize="Small"/>
                                    <Label Text="{Binding OverallPerformance.GradeDistribution.Satisfactory}"/>
                                </VerticalStackLayout>
                                <VerticalStackLayout Grid.Column="3">
                                    <Label Text="Неуд." FontSize="Small"/>
                                    <Label Text="{Binding OverallPerformance.GradeDistribution.Poor}"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator x:Name="LoadingIndicator" 
                          Grid.RowSpan="2"
                          IsVisible="False"
                          IsRunning="True"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>
    </Grid>
</ContentPage>