<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:FrontEdu.Views"
             x:Class="FrontEdu.Views.CoursesPage"
             Title="Курсы">

    <Grid RowDefinitions="Auto,*">
        <!-- Верхняя панель -->
        <Grid Grid.Row="0" 
              Padding="10"
              ColumnDefinitions="*,Auto"
              BackgroundColor="{StaticResource Gray200}">

            <SearchBar Grid.Column="0"
                       x:Name="SearchBar"
                       Placeholder="Поиск курса"
                       TextChanged="OnSearchTextChanged"/>

            <Button Grid.Column="1"
                    x:Name="AddCourseButton"
                    Text="+"
                    FontSize="20"
                    WidthRequest="50"
                    Margin="5,0,0,0"
                    Clicked="OnAddCourseClicked"/>
        </Grid>

        <!-- Список курсов -->
        <RefreshView Grid.Row="1"
                     x:Name="CoursesRefreshView">
            <CollectionView x:Name="CoursesCollection"
                          SelectionMode="Single"
                          SelectionChanged="OnCourseSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Margin="10,5"
                               Padding="15"
                               BorderColor="{StaticResource Gray300}">
                            <Grid RowDefinitions="Auto,Auto,Auto"
                                  RowSpacing="10">
                                <!-- Заголовок и дата -->
                                <Grid Grid.Row="0" 
                                      ColumnDefinitions="*,Auto,Auto">
                                    <Label Text="{Binding Name}"
                                           FontSize="18"
                                           FontAttributes="Bold"/>
                                    <Button Grid.Column="1"
                                            Text="ℹ"
                                            FontSize="20"
                                            WidthRequest="40"
                                            Margin="5,0"
                                            Clicked="OnCourseInfoClicked"
                                            CommandParameter="{Binding .}"/>
                                    <Label Grid.Column="2"
                                           Text="{Binding CreatedAt, StringFormat='{0:dd.MM.yyyy}'}"
                                           TextColor="{StaticResource Gray600}"/>
                                </Grid>

                                <!-- Описание -->
                                <Label Grid.Row="1"
                                       Text="{Binding Description}"
                                       LineBreakMode="WordWrap"/>

                                <!-- Информация о преподавателях и студентах -->
                                <Grid Grid.Row="2"
                                      ColumnDefinitions="*,Auto">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="Преподаватели:"
                                               FontAttributes="Bold"
                                               Margin="0,0,0,5"/>
                                        <CollectionView ItemsSource="{Binding Teachers}"
                                                      HeightRequest="60">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate>
                                                    <Label Text="{Binding FullName}"
                                                           TextColor="{StaticResource Primary}"/>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </VerticalStackLayout>

                                    <VerticalStackLayout Grid.Column="1"
                                                       HorizontalOptions="End">
                                        <Label Text="Студентов:"
                                               FontAttributes="Bold"/>
                                        <Label Text="{Binding StudentsCount}"
                                               HorizontalOptions="Center"/>
                                    </VerticalStackLayout>
                                </Grid>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Индикатор загрузки -->
        <ActivityIndicator Grid.RowSpan="2"
                          x:Name="LoadingIndicator"
                          IsVisible="false"
                          IsRunning="{Binding Source={RelativeSource Self}, Path=IsVisible}"
                          HorizontalOptions="Center"
                          VerticalOptions="Center"/>

        <!-- Панель информации о курсе -->
        <Grid x:Name="CourseInfoPanel"
              Grid.RowSpan="2"
              IsVisible="false"
              BackgroundColor="#80000000">
            <Frame Margin="20" 
                   Padding="15" 
                   VerticalOptions="Center"
                   MaximumWidthRequest="400">
                <VerticalStackLayout x:Name="CourseInfoContent" 
                                    Spacing="15">
                    <Label x:Name="CourseNameLabel"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <BoxView HeightRequest="1" 
                             Color="{StaticResource Gray300}"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Основная информация" 
                               FontAttributes="Bold"/>
                        <Label x:Name="CourseDescriptionLabel"
                               TextColor="{StaticResource Gray600}"/>
                        <Label x:Name="CourseCreatedLabel"
                               TextColor="{StaticResource Gray600}"/>
                    </VerticalStackLayout>

                    <BoxView HeightRequest="1" 
                             Color="{StaticResource Gray300}"/>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Студенты" 
                               FontAttributes="Bold"/>
                        <CollectionView x:Name="CourseStudentsCollection"
                                      HeightRequest="200">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Padding="5" 
                                          ColumnDefinitions="*, Auto">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding FullName}"
                                                   FontAttributes="Bold"/>
                                            <Label Text="{Binding Email}"
                                                   TextColor="{StaticResource Gray600}"
                                                   FontSize="14"/>
                                        </VerticalStackLayout>
                                        <Button Grid.Column="1"
                                                Text="✕"
                                                IsVisible="{Binding Source={RelativeSource AncestorType={x:Type views:CoursesPage}}, Path=CanManageCourses}"
                                                Clicked="OnRemoveStudentClicked"
                                                CommandParameter="{Binding .}"
                                                TextColor="Red"
                                                BackgroundColor="Transparent"
                                                HeightRequest="40"
                                                WidthRequest="40"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>

                    <Button x:Name="AddStudentButton"
        Text="Добавить студента"
        IsVisible="{Binding CanManageCourses}"/>
                    <Button Text="Закрыть"
                            Clicked="OnCloseCourseInfoClicked"
                            BackgroundColor="{StaticResource Gray500}"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
</ContentPage>